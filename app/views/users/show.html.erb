<div class="container cardshow col-sm-6 offset-sm-3">
  <div class="card-trip">
    <%= cl_image_tag @user.photo.key, class:"show-card", alt:""%>
    <div class="card-show-infos">
      <div >
        <h2 class="showname"><%= @user.first_name %> <strong><%= @user.last_name %></strong></h2>
        <p class="showp"><%= @user.service %></p>
      </div>
      <div>
        <h2 class="card-trip-pricing"><i class="fa-solid fa-trophy"></i>
        <%= @user.reward %>
        </h2>
      </div>
    </div>
  </div>
</div>
<div class="container dateform">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for [@user, @reservation], method: :post do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, placeholder: "Quand voulez-vous rÃ©server?" %>
      <%= f.button :submit,"RÃ©server", class: "btn btn-primary showbutton" %>
    <% end %>
  </div>
</div>
<% if @reviews.length != 0 %>
  <h1 class="col-sm-6 offset-sm-3">Commentaires</h1>
  <div class="commentary col-sm-6 offset-sm-3">
    <% @reviews.each do |review| %>
      <p class="showreview">Commentaire de <%= review.user.first_name %> : <%= review.comment %>
      <br>Note de <%= review.rating%></p>
    <% end %>
  </div>
<% end %>
